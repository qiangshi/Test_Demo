<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_location"
        android:layout_width="@dimen/padding_16"
        android:layout_height="@dimen/padding_16"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_20"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_17"
        android:layout_marginEnd="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_17"
        android:layout_toRightOf="@+id/img_location"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16"
        tools:text="北京安科文adfasdfasdfasdfa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:layout_marginStart="@dimen/padding_20"
        android:layout_marginEnd="@dimen/padding_15"
        android:background="@color/color_dde1eb"
        android:layout_below="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="parent" />


</RelativeLayout>