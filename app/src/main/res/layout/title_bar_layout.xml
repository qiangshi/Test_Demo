<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_50"
    android:layout_marginStart="@dimen/padding_11"
    android:layout_marginEnd="@dimen/padding_11"
    android:layout_marginTop="@dimen/padding_24"
    android:background="@drawable/bg_solid_ffffff_5">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/padding_20"
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_15"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_back"
        android:visibility="visible" />

    <com.supermap.demo.test.view.SearchBarView
        android:id="@+id/search_bar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_toEndOf="@+id/btn_back"
        android:layout_toStartOf="@+id/btn_title_right"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btn_title_right"
        android:layout_width="@dimen/padding_20"
        android:layout_height="@dimen/padding_20"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_search"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_20"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingEnd="@dimen/padding_10"
        android:singleLine="true"
        android:text="提交"
        android:textColor="@color/color_4E7CFE"
        android:textSize="@dimen/text_font_16"
        android:visibility="gone" />


</RelativeLayout>