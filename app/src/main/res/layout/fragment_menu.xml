<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/padding_257"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.MenuFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_29"
        android:layout_marginBottom="@dimen/padding_9"
        android:paddingStart="@dimen/padding_5"
        android:paddingEnd="@dimen/padding_5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_ededed" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_9"
        android:text="@string/special_data"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_special"
        android:paddingStart="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_ededed" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_9"
        android:text="@string/theme_data"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>