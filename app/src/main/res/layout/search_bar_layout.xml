<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/search_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/search_btn"
        android:background="@null"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/all_search_service"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/text_font_18" />

    <ImageView
        android:id="@+id/search_clear_word_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_gravity="center"
        android:paddingTop="@dimen/padding_7"
        android:layout_marginEnd="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_7"
        android:paddingStart="@dimen/padding_7"
        android:scaleType="centerInside"
        android:src="@drawable/icon_close"
        android:visibility="gone" />

</LinearLayout>