<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_53"
    android:paddingStart="@dimen/padding_19"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_theme"
        android:layout_width="@dimen/padding_33"
        android:layout_height="@dimen/padding_33"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/padding_12"
        android:src="@drawable/icon_menu_2"/>

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_15"
        android:textColor="@color/color_333333"
        android:text="城乡体系规划"/>
    
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent" 
        android:layout_weight="1"/>
    
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/padding_23"
        android:layout_height="@dimen/padding_23"
        android:layout_marginEnd="@dimen/padding_13"
        android:src="@drawable/icon_menu_no"/>

</LinearLayout>