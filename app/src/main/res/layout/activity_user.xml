<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.UserActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingStart="@dimen/padding_16"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_17"
            android:text="用户中心"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_18" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_200"
        android:background="@drawable/icon_user_bg"
        app:layout_constraintTop_toBottomOf="@+id/ll_title">


        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/padding_84"
            android:layout_height="@dimen/padding_84"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_13"
            android:textColor="@color/black"
            android:textSize="@dimen/text_font_19"
            tools:text="333333" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_favorite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_52"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/rel_bg">

        <ImageView
            android:layout_width="@dimen/padding_22"
            android:layout_height="@dimen/padding_21"
            android:layout_marginStart="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_favorite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_17"
            android:text="@string/favorite"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_19" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/padding_10"
            android:layout_height="@dimen/padding_18"
            android:layout_marginEnd="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_right" />

    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:layout_marginStart="@dimen/padding_56"
        android:background="@color/color_f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/ll_favorite" />


    <LinearLayout
        android:id="@+id/ll_modify_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_52"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_1">

        <ImageView
            android:layout_width="@dimen/padding_22"
            android:layout_height="@dimen/padding_21"
            android:layout_marginStart="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_17"
            android:text="@string/modify_password"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_19" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/padding_10"
            android:layout_height="@dimen/padding_18"
            android:layout_marginEnd="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_right" />

    </LinearLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:layout_marginStart="@dimen/padding_56"
        android:background="@color/color_f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/ll_modify_password" />

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_52"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_2">

        <ImageView
            android:layout_width="@dimen/padding_22"
            android:layout_height="@dimen/padding_21"
            android:layout_marginStart="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_17"
            android:text="@string/about"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_19" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/padding_10"
            android:layout_height="@dimen/padding_18"
            android:layout_marginEnd="@dimen/padding_17"
            android:scaleType="fitXY"
            android:src="@drawable/icon_user_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"
        android:layout_marginStart="@dimen/padding_56"
        android:background="@color/color_f2f2f2"
        app:layout_constraintTop_toBottomOf="@+id/ll_about" />


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_73"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_20"
        android:background="@drawable/icon_user_logout"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_10"
        android:text="@string/logout"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_19"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>