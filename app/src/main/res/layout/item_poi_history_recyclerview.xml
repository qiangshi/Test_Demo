<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="@dimen/padding_12"
        android:layout_height="@dimen/padding_16"
        android:layout_marginStart="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_17"
        android:scaleType="fitXY"
        android:src="@drawable/icon_search_location"
        />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_14"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_font_16"
      android:layout_toRightOf="@+id/img_location"
        tools:text="北京安科" />

    <TextView
        android:id="@+id/tv_mix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_toEndOf="@+id/img_location"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_font_12"
        android:maxLines="2"
       android:layout_marginEnd="@dimen/padding_28"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/padding_16"
        android:layout_below="@+id/tv_name"
        tools:text="博物fasdfasdfasdfasdfasdfasdffasdffasdfasdfasdfasdfasdffasdff馆" />


    <ImageView
        android:layout_width="@dimen/padding_8"
        android:layout_height="@dimen/padding_14"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_land_right"
        android:layout_marginEnd="@dimen/padding_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_20"
        android:layout_height="@dimen/padding_1"
        android:layout_marginEnd="@dimen/padding_15"
        android:background="@color/color_dde1eb"
        android:layout_below="@+id/tv_mix"/>

</RelativeLayout>