            android:name=".ui.activity.search.SearchResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.search.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.test.ChartActivity"
            android:screenOrientation="portrait" />
